<?xml version="1.0" encoding="UTF-8"?>
<tns:contentitems
	xmlns:tns="http://tel.dur.ac.uk/xml/schemas/contentitems_schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://tel.dur.ac.uk/xml/schemas/mystery_schema ../../data/contentitems/schemas/contentitems_schema.xsd "
	author="Steve Higgins"
	description="History mystery based on the Great Fire of London"
	license="restricted" name="The Great Fire of London"
	
	locationFile="data/mysteries/great_fire_of_london/great_fire_of_london_location.xml"
	appearanceFile="data/mysteries/great_fire_of_london/great_fire_of_london_apparence.xml"
	gestureFile="data/mysteries/great_fire_of_london/great_fire_of_london_gesture.xml"
	defaultAppearanceFile="data/mysteries/defaultApparence.xml"
	>
	<tns:items>
		<tns:item content-type="text/plain"
			id="FOL1"
			content = "Thomas Farrinor was Baker to King Charles II"
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL2"
			content ="The Baker said that he thought he had put out his oven, but embers from the fire set light to nearby firewood." 
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL3"
			content ="The Baker's maid was the first victim of the Great Fire."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL4"
			content = "Most of the houses and buildings were made of wood and many had thatched roofs."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL5"
			content ="The people tried to put the fire out with buckets of water." 
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL6"
			content ="Hundreds of rats lived in Pudding Lane."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL7"
			content ="Lots of people spent time saving their things instead of trying to stop the fire spreading."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL8"
			content ="On Wednesday night the wind hushed and the fire burned gently."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL9"
			content ="The buildings caught fire very easily."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL10"
			content ="The fire destroyed about four-fifths of the city, or more than 430 acres."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL11"
			content ="The Baker forgot to turn off his oven."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL12"
			content ="Riverfront warehouses were bursting full of oil, tallow and other combustible goods."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL13"
			content ="The Baker lived in Pudding Lane."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL14"
			content ="Sparks from the Baker's burning house fell on hay and straw at the Star Inn."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL15"
			content ="The fire started in Pudding Lane."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL16"
			content ="The buckets were made of wood and leather."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL17"
			content ="Houses were pulled down to stop the fire spreading, but wood and rubbish were left lying in the street."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL18"
			content ="The fire began at night when everybody was asleep."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL19"
			content ="The strong easterly wind kept the fire burning."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOL20"
			content ="About 13,200 houses, nearly 90 parish churches, and nearly 50 livery company halls were burnt down."
			contentItemType ="MultiLineTextLabel"
			category ="content"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
		<tns:item content-type="text/plain"
			id="FOLTitle"
			content ="Why did 16 people die in the Great Fire of London?"
			contentItemType ="MultiLineTextLabel"
			category ="title"
			>
			<tns:attributes></tns:attributes>
		</tns:item>
	</tns:items>
</tns:contentitems>