	author="Steve Higgins"
	description="Does Nathan miss the bus for the school trip?"
	license="restricted" name="Does Nathan miss the bus for the school trip?"

	locationFile="data/mysteries/schooltrip/schooltrip_location.xml"
	appearanceFile="data/mysteries/schooltrip/schooltrip_apparence.xml"
	gestureFile="data/mysteries/schooltrip/schooltrip_gesture.xml"
